<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.cubaplatform.petclinic.web.visit.visit.VisitBrowse"
        focusComponent="visitsTable"
        lookupComponent="visitsTable"
        messagesPack="com.cubaplatform.petclinic.web.visit.visit">
    <dsContext>
        <groupDatasource id="visitsDs"
                         class="com.cubaplatform.petclinic.entity.visit.Visit"
                         view="visit-with-pet">
            <query>
                <![CDATA[select e from petclinic$Visit e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="visitsTable"
            spacing="true">
        <filter id="filter"
                applyTo="visitsTable"
                datasource="visitsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="visitsTable"
                    width="100%">
            <actions>
                <action id="createForPet"
                        caption="msg://createForPet"
                        icon="font-icon:BRIEFCASE"
                        invoke="createForPet"
                />
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="visitDate"/>
                <column id="description"/>
                <column id="pet"/>
            </columns>
            <rows datasource="visitsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createForPetBtn"
                        action="visitsTable.createForPet"/>
                <button id="createBtn"
                        action="visitsTable.create"/>
                <button id="editBtn"
                        action="visitsTable.edit"/>
                <button id="removeBtn"
                        action="visitsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
